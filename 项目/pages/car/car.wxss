.dl {
    width: 100%;
    border-bottom: 1px solid #ccc;
    padding: 10rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    height: 240rpx;
  }
  .dt {
    flex: 4;
    padding: 10rpx 0;
    box-sizing: border-box;
    margin-right: 20rpx;
  }
  .dt image {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
  }
.dd {
    flex: 6;
    
  }
   .hs {
  font-weight: bold;
  }
 .top{
  
   display: flex;
   justify-content: space-between;
 
 }
 .foot{
   display: flex;
   justify-content: space-between;

 }
 .foot view{
   display: flex;
 }
 .bottom{
  width: 100%;
  height:100rpx;
