/* components/dialog/dialog.wxss */

.dialog {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 0;
  z-index: 99;
}

.mask {
  width: 500rpx;
  height: 600rpx;
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -300rpx;
  margin-left: -250rpx;
  display: flex;
  flex-direction: column;
  /* justify-content: space-around; */
  align-items: center;
  border-radius: 20rpx;
}
.mask image{
  width:200rpx;
  height:300rpx;
  margin:0 auto;
  margin-top: 80rpx;
  margin-bottom: 30rpx;
}
.mask view{
  font-size: 35rpx;
}
.mask view text{
  font-size: 60rpx;
  color:yellow;
}
.cls{
font-size: 100rpx;
position: absolute;
top:120rpx;
right:50rpx;
color: red;
z-index: 9;
}