/* 全局样式 */

.wrapper {
  width: 100%;
  height: 100%;
}

.fs35 {
  font-size: 30rpx;
}

.loc {
  height: 60rpx;
  background: #ebebeb;
  line-height: 60rpx;
  font-size: 30rpx;
  padding: 0 25rpx;
}

.cur {
  height: 100rpx;
  background: #f5f5f5;
  display: flex;
  align-items: center;
}

.itm {
  display: inline-block;
  padding: 10rpx 50rpx;
  background: #fff;
  border: solid 1rpx #ccc;
  margin-left: 25rpx;
}

.hot {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-left: 20rpx;
  padding-right: 80rpx;
}

.hot text {
  margin-top: 20rpx;
  margin-left: 0;
  margin-right:30rpx;
}
.list{
  margin-top:20rpx;
}
.keys{
  position: fixed;
  top:100rpx;
  right:20rpx;
  font-size: 30rpx;
}
.keys view:nth-child(2){
  text-align: center;
  line-height: 46rpx;
}
scroll-view{
   height: calc(100vh - 128px);
}